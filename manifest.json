{
    "name": "Bot Farm Twitch",
    "description": "Automatically claim chat points on Twitch.",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "./scripts/background.js"
    },
    "content_scripts":[
        {
            "matches": ["https://www.twitch.tv/*"],
            "js": ["./scripts/farmer.js"]
        }
    ]
}
